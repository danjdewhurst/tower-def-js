{
  "name": "tower-def-js",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@types/bun": "latest",
    "husky": "^9.1.7"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "prepare": "husky",
    "lint": "biome check .",
    "lint:fix": "biome check --write --unsafe .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "bun tsc --project tsconfig.prod.json && biome check .",
    "fix": "biome check --write --unsafe . && biome format --write ."
  }
}
